  <body>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.min.js" type="text/javascript"></script>
    <script type="text/javascript">

    $(document).ready(function() {
      g = NewGrid(<%= @game.width%>,<%= @game.height%> <% if @grid %><%=', ' +  @grid%><% end %>);
      initializeGame();
      
    });
    </script>
    <div id="main">
      <h1>
        Conway's Game of Life
      </h1>
      <div style="clear:both"></div>
      <div id="sidebar">
        <div class="collapsiblesection" hidden=true>
          <div class="group">
            <input id="gridwidth" value="<%= @game.width%>" hidden=true><input id="gridheight" value="<%= @game.height%>" hidden=true>
          </div>
        </div>
      </div>
      <div id="controls">
        <div>
        <div id="buttonholder">
          <button id="gamecontrol" value="stop">Run</button>
        </div>
        </div>
      </div>
      <div id="thegame">
        <div id="tablearea">
        </div>
        <div id="prefabs">
          <button id="blinker" class="prefab" style="position:relative"><img src="/assets/blinker.png" width="34px" height="12px" /><div class="button-label" >Blinker</div></button>
          <button id="toad" class="prefab"><img src="/assets/toad.png" width="45px" height="22px" /><div class="button-label" >Toad</div></button>
          <button id="beacon" class="prefab"><img src="/assets/beacon.png" width="45px" height="45px" /><div class="button-label" >Beacon</div></button>
          <button id="fpentomino" class="prefab"><img src="/assets/r-pentomino.png" /><div class="button-label" >R-pentomino</div></button>
        </div>
      </div>
      <input type="hidden" id="gamespeed" value="85" />
    </div>
  </body>
</html>

